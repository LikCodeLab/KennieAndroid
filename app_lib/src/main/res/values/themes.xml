<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_ginger</item>
        <item name="colorPrimaryDark">@color/cornflower_ginger_dark</item>
        <item name="colorAccent">@color/cornflower_ginger</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cornflower_ginger</item>
        <item name="colorSecondaryVariant">@color/cornflower_ginger_dark</item>
        <item name="colorOnSecondary">@color/cornflower_ginger</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cornflower_ginger_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlueThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_ginger</item>
        <item name="colorPrimaryDark">@color/cornflower_ginger_dark</item>
        <item name="colorAccent">@color/cornflower_ginger</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cornflower_ginger</item>
        <item name="colorSecondaryVariant">@color/cornflower_ginger_dark</item>
        <item name="colorOnSecondary">@color/cornflower_ginger</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cornflower_ginger_dark</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>
</resources>