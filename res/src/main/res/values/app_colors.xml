<resources>

    <!-- App 样式中引用的颜色 -->
    <!-- 窗口背景颜色 -->
    <color name="app_default_windows_background">@color/app_gray2</color>
    <!-- 应用的主色 Toolbar 默认使用该颜色 -->
    <color name="app_default_primary">@color/white</color>
    <!-- 应用的主要暗色调，状态栏默认使用该颜色 -->
    <color name="app_default_primary_dark">@color/app_color_black</color>
    <!-- 应用的强调色，CheckBox RadioButton Switch 等一般控件的选中效果默认采用该颜色 -->
    <color name="app_default_accent">#5A8DDF</color>
    <!-- 默认文本颜色，Button、TextView 的文字颜色 -->
    <color name="app_default_text">#333333</color>
    <!-- 默认提示颜色，Button、TextView 的提示文字颜色 -->
    <color name="app_default_text_hint">@color/panda</color>

    <!-- 按钮按压时的颜色 -->
    <color name="app_default_button_pressed">#AA5A8DDF</color>
    <!-- 按钮禁用时的颜色 -->
    <color name="app_default_button_disable">#BBBBBB</color>


    <!-- 分割线的颜色 -->
    <color name="app_default_line">#ECECEC</color>


    <!-- 通常用于按钮及修饰元素 -->
    <color name="app_default_color_green">#009688</color>
    <!-- 一般用于选中状态 -->
    <color name="app_default_color_light_green">#5FB878</color>
    <!-- 通常用于导航 -->
    <color name="app_color_black">#393D49</color>
    <!-- 比较适合一些鲜艳色系的页面 -->
    <color name="app_color_blue">#1E9FFF</color>
    <!-- 暖色系，一般用于提示性元素 -->
    <color name="app_orange">#F7B824</color>
    <!-- 比较引人注意的颜色 -->
    <color name="app_red">#FF5722</color>
    <!-- 侧边或底部普遍采用的颜色 -->
    <color name="app_dark">#2F4056</color>
    <!-- 用于文字着色，如链接文本 -->
    <color name="app_dark_blue">#01AAED</color>

    <!-- 一般用于背景、边框 -->
    <color name="app_gray0">#FBFBFB</color>
    <color name="app_gray1">#F2F2F2</color>
    <color name="app_gray2">#F4F4F4</color>
    <color name="app_gray3">#EEEEEE</color>
    <color name="app_gray4">#E2E2E2</color>
    <color name="app_gray5">#DDDDDD</color>
    <color name="app_gray6">#D2D2D2</color>
    <color name="app_gray7">#C2C2C2</color>

</resources>
