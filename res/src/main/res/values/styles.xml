<?xml version="1.0" encoding="utf-8"?>
<resources>
 <!-- 默认圆角按钮样式 -->
    <style name="Common_ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_round_blue_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <!-- 直角按钮样式 -->
    <style name="Common_RectButtonStyle" parent="Common_ButtonStyle">
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:background">@drawable/btn_rect_blue_selector</item>
    </style>

    <!-- 默认水平分割线样式 -->
    <style name="Common_HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_default_line</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="Common_VerticalLineStyle">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_default_line</item>
    </style>
	
	    <!-- 边框按钮样式(默认 蓝色) -->
    <style name="Common_ButtonBorderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_round_blue_selector</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:minWidth">@dimen/dp_90</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/border_text_round_blue_selector</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
	
</resources>