<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 默认水平分割线样式 -->
    <style name="Common_HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/app_default_line</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="Common_VerticalLineStyle">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_default_line</item>
    </style>

    <!-- 边框按钮样式(默认 蓝色) -->
    <style name="App_Default_ButtonBorderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_round_blue_selector</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:minWidth">@dimen/dp_90</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/border_text_round_blue_selector</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!-- 默认文本框样式 -->
    <style name="App_Default_EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>

</resources>