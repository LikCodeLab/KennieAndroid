<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 倾斜的 TextView -->
    <declare-styleable name="SlantedTextView">
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />
        <attr name="android:gravity" />
        <attr name="android:colorBackground" />
        <attr name="android:paddingVertical" />
        <attr name="android:paddingHorizontal" />
        <!-- 显示成三角形 -->
        <attr name="base_triangle" format="boolean" />
    </declare-styleable>


    <declare-styleable name="PullZoomView">
        <attr name="pzv_sensitive" format="float" />
        <attr name="pzv_isZoomEnable" format="boolean" />
        <attr name="pzv_isParallax" format="boolean" />
        <attr name="pzv_zoomTime" format="integer" />
    </declare-styleable>


    <declare-styleable name="SimpleSettingItem">

        <attr name="z_setting_titleText" format="string" />
        <attr name="z_setting_titleTextSize" format="dimension" />
        <attr name="z_setting_titleTextColor" format="color" />

        <attr name="z_setting_leftIcon" format="reference" />
        <attr name="z_setting_leftIconTint" format="color" />
        <attr name="z_setting_rightIcon" format="reference" />
        <attr name="z_setting_rightIconTint" format="color" />

        <attr name="z_setting_background" format="integer" />

    </declare-styleable>

    <declare-styleable name="ZSettingItem">

        <attr name="z_setting_infoText" format="string" />
        <attr name="z_setting_infoTextSize" format="dimension" />
        <attr name="z_setting_infoTextColor" format="color" />

        <attr name="z_setting_rightText" format="string" />
        <attr name="z_setting_rightTextSize" format="dimension" />
        <attr name="z_setting_rightTextColor" format="color" />

        <attr name="z_setting_showUnderLine" format="boolean" />
        <attr name="z_setting_showRightBtn" format="boolean" />
        <attr name="z_setting_showRightText" format="boolean" />

        <attr name="z_setting_showRightArrow" format="boolean" />
        <attr name="z_setting_arrowIcon" format="reference" />
        <attr name="z_setting_arrowIconTint" format="color" />


    </declare-styleable>

    <declare-styleable name="CheckableSettingItem">

        <attr name="z_setting_checkable_normalColor" format="color" />
        <attr name="z_setting_checkable_checkedColor" format="color" />

    </declare-styleable>

</resources>